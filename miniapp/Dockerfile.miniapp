# Stage 1 - build
FROM node:20 AS build
WORKDIR /app

# Copy only package.json and package-lock.json if exists
COPY package*.json ./
RUN npm install

# Copy rest of frontend source
COPY . .
RUN npm run build

# Stage 2 - serve with nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

